{% extends 'baseAdmin.html.twig' %}


{% block body %}

<div class="col g-ml-45 g-ml-0--lg g-pb-65--md">
          <!-- Breadcrumb-v1 -->
          <div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
            <ul class="u-list-inline g-color-gray-dark-v6">

              <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-secondary--hover g-valign-middle" href="#!">Clients</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
              </li>

              <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-secondary--hover g-valign-middle" href="#!">Créer un client</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
              </li>
            </ul>
          </div>
          <!-- End Breadcrumb-v1 -->

        <div class="g-pa-20">
            <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-30">Clients</h1>

            <header class="g-mb-20">
              <h2 class="g-font-weight-400 g-font-size-16 g-color-black mb-0">Créer un client</h2>
            </header>

        {{ form_start(communesForm) }}
          <div class="row">
            <div class="col-md-4 mb-5">
              {{ form_label(communesForm.titre) }}
              {{ form_widget(communesForm.titre) }}
            </div>
            <div class="col-md-4 mb-5">
              {{ form_label(communesForm.departement) }}
              {{ form_widget(communesForm.departement) }}
            </div>
            <div class="col-md-4 mb-5">
              {{ form_row(communesForm.category) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-4  mx-auto">
              {{ form_widget(communesForm.valider) }}
            </div>
          </div>

            

        {{ form_end(communesForm) }}

        </div>

{% endblock %}





