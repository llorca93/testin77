{% extends 'baseAdmin.html.twig' %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('assets/css/articleform.css') }}">

{% endblock %}

{% block body %}

<div class="col g-ml-45 g-ml-0--lg g-pb-65--md">
          <!-- Breadcrumb-v1 -->
          <div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
            <ul class="u-list-inline g-color-gray-dark-v6">

              <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-secondary--hover g-valign-middle" href="#!">Articles</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
              </li>

              <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-secondary--hover g-valign-middle" href="#!">Créer un article</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
              </li>
            </ul>
          </div>
          <!-- End Breadcrumb-v1 -->

        <div class="g-pa-20">
            <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-30">Articles</h1>

            <header class="g-mb-20">
              <h2 class="g-font-weight-400 g-font-size-16 g-color-black mb-0">Créer un article</h2>
            </header>
        <div id="article">
        {{ form_start(articleForm) }}
          <div class="row">
            <div class="col-md-4 mb-5">
              {{ form_label(articleForm.titre) }}
              {{ form_widget(articleForm.titre) }}
            </div>
            <div class="col-md-4 mb-5">
              {{ form_label(articleForm.category) }}
              {{ form_widget(articleForm.category) }}
            </div>
            <div class="col-md-4 mb-5">
              {{ form_row(articleForm.illustration) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-5">
              {{ form_label(articleForm.description) }}
              {{ form_widget(articleForm.description) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-4  mx-auto">
              {{ form_widget(articleForm.valider) }}
            </div>
          </div>

            

        {{ form_end(articleForm) }}
        </div>

        </div>

{% endblock %}

{% block javascripts %}

   <script>
      tinymce.init({
        selector: '.tiny'
      });
    </script>

  <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
  <script>
    $(document).ready(function () {
      bsCustomFileInput.init()
    })
  </script>

{% endblock %}



