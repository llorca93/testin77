                        <li><a href=""><img src="{{ asset('assets/img/5.png') }}" height="125px"  alt=""></a></li>
                        <li><a href=""><img src="{{ asset('assets/img/6.png') }}" height="125px"  alt=""></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-7 d-flex flex-wrap justify-content-around">
            {% for organisation in organisations %}
                <div class="card mt-5" style="width: 19rem;">
                    <h5 class="card-title text-center pt-5">{{ organisation.fonction}}</h5>
                    <div class="card-body">  
                        <h5 class="card-text text-center fonction">{{ organisation.firstname }} {{ organisation.name}}</h5>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
