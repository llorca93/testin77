{% endblock %}

{% block body %}

<div class="container">
        <div class="row">
            <div class="col-md-12 header"></div>
        </div>
        <div class="row mb-5 mt-5">
            <div class="col-md-5">
                <h2 class="mt-2 ms-5 head">Compétences</h2>
            </div>
            <div class="col-md-7">
                <h2 class="head mt-2 text-center">Organisation</h2>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-5">
                <div class="nav-competences">
                    <ul>
                        <li><a href="{{ path('assainissements') }}"><img src="{{ asset('assets/img/1.png') }}" height="125px"  alt=""></a></li>
                        <li><a href="{{ path('dossiers') }}"><img src="{{ asset('assets/img/2.png') }}" height="125px"  alt=""></a></li>
